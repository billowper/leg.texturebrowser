.toolbar {
    height: 30px;
}

.texture-list-container {
    flex-grow: 1;
}

.texture-list {
    align-content: flex-start;
    align-items: flex-start;
    align-self: auto;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    flex-shrink: 0;
    justify-content: flex-start;
    flex-grow: 1;
    overflow: visible;
}

.tex-parent {
    background-size: contain;
    background-repeat: no-repeat;
    margin: 2px;
    flex-direction: column-reverse;
    border-color: rgba(0,0,0,.7);
    border-width: 1px;
}

.tex-parent:hover {
    border-color: white;
    border-width: 1px;
}

.tex-mat-button {
    width: 30px;
    height: 30px;
    position: absolute;
    top: 2px;
    right: 2px;
    display: none;
}

.tex-parent:hover .tex-mat-button {
    display: initial;
}

.tex-fav-button {
    width: 30px;
    height: 30px;
    position: absolute;
    top: 2px;
    left: 2px;
    display: none;
}

.tex-parent:hover .tex-fav-button{
    display: initial;
}

.tex-favourite .tex-fav-button {
    background-color: #BF8600;
    color: black;
}

.tex-label {
    background-color: rgba(0,0,0,.7);
}

.info-label {
    padding: 3px;
}

.folder-selection{
    flex-grow: 1;
    min-width: 500px;
}

.size-slider{
    flex-grow: 1;
    min-width: 300px;
}

.search-field{
    flex-grow: 1;
    min-width: 300px;
}

/* saved search */

.save-search-button:hover {
    background-color: green;
    color: lightgreen;
}

.saved-search-list {
    flex-direction: row;
    flex-shrink: 1;
    padding: 4px;
}

.saved-search-button{
    height: 24px;
    flex-direction: row;
    padding-left: 10px;
    padding-right: 0;
    margin: 0 1px;
}
.saved-search-button:hover {
    background-color: darkgoldenrod;
    color: palegoldenrod;
}

.saved-search-button > #label {
    margin-right: 5px;
}

.saved-search-button > #delete {
    color: grey;
    width: 18px;
    -unity-font-style: bold;
}
.saved-search-button > #delete:hover {
    background-color: darkred;
    color: white;
}

/* settings */

.settings-container {
    padding: 10px;
}

.settings-container .unity-base-field {
    margin-bottom: 5px !important;
}

.settings-container .unity-base-field__label {
    min-width: 200px !important;
}

.settings-title {
    font-size: 19px;
    -unity-font-style: bold;
    margin-bottom: 10px;
}

